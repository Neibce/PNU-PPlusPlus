<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 둥근 모서리 설정 -->
    <corners android:radius="20dp" />

    <!-- 테두리 설정 -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" /> <!-- 회색 테두리 -->

    <!-- 배경색 설정 -->
    <solid android:color="#FFFFFF" /> <!-- 배경색 흰색 -->

    <!-- 내부 패딩 설정 (선택 사항) -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />
</shape>
